#!/bin/sh

# Our SBT script to call SBT.
# TODO: Check if a ./project dir exists. 
# If not Ask before creating it.
java_path=/opt/java/jre/bin
if [[ $OSTYPE == darwin~ ]]
then
  java_path=/usr/bin
fi

$java_path/java -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=512M -Xmx512M -Xss2M -jar `dirname $0`/sbt-launch.jar "$@"
